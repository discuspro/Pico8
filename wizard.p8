pico-8 cartridge // http://www.pico-8.com
version 16
__lua__

function _init()
	wizard= { x=1, y=1, sprite=1, speed=2, moving=false}
end

function move()
	wizard.moving=true
	--[[
	wizard.sprite += 1
	if wizard.sprite > 2 then
	   wizard.sprite = 0
	end
	--]]
end

function _update()
	wizard.moving=false
	
	if btn(0) then
		wizard.x -= wizard.speed
		move()
	end
	if btn(1) then
		wizard.x += wizard.speed
		move()
	end
	if btn(2) then
		wizard.y -= wizard.speed
		move()
	end
	if btn(3) then
		wizard.y += wizard.speed
		move()
	end
	if not wizard.moving then
		wizard.sprite = 1
	end
end

function _draw()
	cls()
	spr(wizard.sprite,wizard.x,wizard.y)
end

